@model IEnumerable<BookStoreMVC.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>List of reviews</h1>

<p class=" add-book">
    <a asp-action="Create">Add a review</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"  class="edit-link">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="edit-link">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="edit-link">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

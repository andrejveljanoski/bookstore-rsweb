@model IEnumerable<BookStoreMVC.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1>List of genres</h1>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
<p class="add-book">
    <a asp-action="Create">Add a genre</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="edit-link">Edit</a>

                        
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="edit-link">Details</a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        

                        <a asp-action="Delete" asp-route-id="@item.Id" class="edit-link">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
